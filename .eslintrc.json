{
    "extends": ["eslint:recommended"],
    "parserOptions": {
        "ecmaVersion": 6
    },
    "env": {
        "browser": true
    },
    "plugins": ["html"],
    "rules": {
        "brace-style": "off",
        "new-cap": ["error", { "capIsNewExceptions": ["Polymer"] }],
        "no-var": "off",
        "max-len": "off",
        "require-jsdoc": "off"
    },
    "globals": {
        "Polymer": true,
        "Promise": true,
        "webpack": true,
        "pbkdf2Sync": true,
        "lightwallet": true,
        "require": true,
        "io": true,
        "Redux": true,
        "ReduxMixin": true,
        "PolymerRedux": true,
        "socket": true,
        "abi": true,
        "SwarmCity": true,
        "AppStore": true
    }
}